#include <iostream>

void ascendingSort(int* arr, int size) {
    for (int i = 0; i < size - 1; i++) {
        for (int j = 0; j < size - i - 1; j++) {
            if (arr[j] > arr[j + 1]) {
                // Обмін елементів
                int temp = arr[j];
                arr[j] = arr[j + 1];
                arr[j + 1] = temp;
            }
        }
    }
}

void descendingSort(int* arr, int size) {
    for (int i = 0; i < size - 1; i++) {
        for (int j = 0; j < size - i - 1; j++) {
            if (arr[j] < arr[j + 1]) {
                // Обмін елементів
                int temp = arr[j];
                arr[j] = arr[j + 1];
                arr[j + 1] = temp;
            }
        }
    }
}

void performSort(void (*sortFunc)(int*, int), int* arr, int size) {
    sortFunc(arr, size);
}

int main() {
    int arr[] = { 5, 2, 8, 1, 9 };
    int size = sizeof(arr) / sizeof(arr[0]);

    performSort(ascendingSort, arr, size);

    std::cout << "Ascending order: ";
    for (int i = 0; i < size; i++) {
        std::cout << arr[i] << " ";
    }
    std::cout << std::endl;

    performSort(descendingSort, arr, size);

    std::cout << "Descending order: ";
    for (int i = 0; i < size; i++) {
        std::cout << arr[i] << " ";
    }
    std::cout << std::endl;

    return 0;
}
